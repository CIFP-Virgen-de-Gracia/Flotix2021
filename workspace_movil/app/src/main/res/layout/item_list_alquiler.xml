<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/esquinas_redondeadas">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lblCliente"/>
                <TextView
                        android:text="Pepe colonias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtClienteAlq" android:textStyle="bold"
                        android:textColor="@color/primaryTextColor" android:textSize="16sp"/>
                <TextView
                        android:text="Teléfono de contacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lblTlf"/>
                <TextView
                        android:text="600000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtTlfAlq" android:textStyle="bold"
                        android:textColor="@color/primaryTextColor" android:textSize="16sp"/>
                <TextView
                        android:text="Matricula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lblMatricula"/>
                <TextView
                        android:text="1111-GTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtMatriculaAlq" android:textStyle="bold"
                        android:textColor="@color/primaryTextColor" android:textSize="16sp"/>
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                <TextView
                        android:text="Fin Contrato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/lblFinContrato"/>
                <TextView
                        android:text="23/01/2022"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtFinContrato" android:textStyle="bold"
                        android:textColor="@color/primaryTextColor" android:textSize="16sp"/>
                <TextView
                        android:text="Importe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/lblImporte"/>
                <TextView
                        android:text="850€"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtImporte"
                        android:textColor="@color/primaryTextColor" android:textSize="16sp" android:textStyle="bold"/>
            </LinearLayout>
            <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>